{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Track Metadata",
  "type": "object",
  "required": ["title", "artists", "release_date", "identifiers", "songwriters"],
  "properties": {
    "title": {"type": "string"},
    "artists": {"type": "array", "items": {"type": "string"}, "minItems": 1},
    "album": {"type": "string"},
    "release_date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "genre": {"type": "string"},
    "language": {"type": "string"},
    "bpm": {"type": "number"},
    "key": {"type": "string"},
    "explicit": {"type": "boolean"},
    "producers": {"type": "array", "items": {"type": "string"}},
    "publisher": {"type": "string"},
    "identifiers": {
      "type": "object",
      "properties": {
        "isrc": {"type": "string"},
        "upc": {"type": "string"},
        "iswc": {"type": "string"}
      },
      "additionalProperties": false
    },
    "songwriters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "split"],
        "properties": {
          "name": {"type": "string"},
          "ipi": {"type": "string"},
          "role": {"type": "string"},
          "split": {"type": "number", "minimum": 0, "maximum": 100}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}